@page
@model PaperGate.Web.Pages.Account.Admin.User.IndexModel
@{
    ViewData["Title"] = "مدیریت کاربر";
}
<div class="container py-8">
    <ul class="breadcrumb">
        <li><a class="hover:text-blue-600 transition" href="~/">خانه</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin/Categories">پنل</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin/User">کاربر</a></li>
    </ul>
    <div class="block tablet:flex justify-between">
        @await Component.InvokeAsync("SidePanelComponent")
        <div class="w-full tablet:w-9/12 px-3 mt-5">
            <div class="PanelCard border rounded p-3">
                <!--                کارد هدر تایتل و دکمه ایجاد-->
                <div class="PanelCard-header flex justify-between">
                    <!--                    ایجاد-->
                    <a asp-page="Create" class="btnSolid bg-indigo-400 text-white mr-3">
                        <i class="fas fa-plus align-middle"></i>
                        ایجاد
                    </a>
                    <!--    تایتل صفحه-->
                    <h2 class="text-lg block mx-auto">مدیریت کاربران</h2>
                </div>
                <div class="PanelCard-body pt-5 overflow-auto">
                    <form method="get">
                        <div class="block tablet:flex mb-5 mx-auto">
                            <div class="w-full tablet:w-1/4 px-2 mt-2 tablet:mt-0">
                                <input type="text" name="searchName" class="customInput" placeholder="نام">
                            </div>
                            <div class="w-full tablet:w-1/4 px-2 mt-2 tablet:mt-0">
                                <input type="text" name="searchNumber" class="customInput" placeholder="کد ملی">
                            </div>
                            <div class="w-full tablet:w-1/4 px-2 mt-2 tablet:mt-3">
                                <button type="submit" class="subBtn btnIndigo"> بیاب </button>
                            </div>

                            <div class="w-full tablet:w-1/4 px-2 mt-2 tablet:mt-3">
                                <a asp-page="Index" class="subBtn btnDark"> بازگشت </a>
                            </div>

                        </div>
                    </form>
                    @if (Model.UserListDto.Any())
                    {

                        <table class="table text-center">
                            <thead class="bg-gray-200">
                                <tr>
                                    <th class="tableBorder p-3">نام</th>
                                    <th class="tableBorder p-3">نام خانوادگی</th>
                                    <th class="tableBorder p-3">کد ملی</th>
                                    <th class="tableBorder p-3">نقش</th>
                                    <th class="tableBorder p-3">مدیریت</th>
                                </tr>
                            </thead>
                            <tbody class="bg-gray-50">


                                @foreach (var user in Model.UserListDto)
                                {
                                    <tr class="hover:bg-gray-100 transition">
                                        <td class="tableBorder p-3">@user.Name </td>
                                        <td class="tableBorder p-3">@user.LastName </td>
                                        <td class="tableBorder p-3">@user.NationalCode </td>
                                        <td class="tableBorder p-3">@(await Model.GetRolesAsync(user.Id))</td>
                                        <td class="tableBorder p-3">
                                            <div class="flex items-center justify-center">
                                                <a asp-page="Details" asp-route-Id="@user.Id" class="btnGroup rounded-r bg-indigo-600 hover:bg-indigo-700 text-white">
                                                    <i class="fas fa-list"></i>
                                                </a>
                                                <a asp-page="Edit" asp-route-Id="@user.Id" class="btnGroup bg-yellow-400 hover:bg-yellow-500">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-page="Delete" asp-route-Id="@user.Id" class="btnGroup rounded-l bg-red-600 hover:bg-red-700 text-white">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    }
                    else
                    {
                        <h3 class="alert-info text-center">کاربری موجود نیست</h3>
                    }
                </div>
            </div>
        </div>
    </div>
</div>