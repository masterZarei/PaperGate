@page
@model PaperGate.Web.Pages.Account.Admin.User.DetailsModel
@{

    ViewData["Title"] = "جزئیات کاربر";
}
<div class="container py-8">
    <ul class="breadcrumb">
        <li><a class="hover:text-blue-600 transition" href="~/">خانه</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin">پنل</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin/Users">کاربر</a><span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="#"> جزئیات </a></li>
    </ul>
    <div class="block tablet:flex justify-between">
        @await Component.InvokeAsync("SidePanelComponent")
        <div class="w-full tablet:w-9/12 px-3 mt-5">
            <div class="PanelCard border rounded p-3">
                <div class="PanelCard-header">
                    <h2 class="text-lg">اطلاعات کاربر</h2>
                </div>
                <div class="PanelCard-body pt-5">
                    <div class="block tablet:flex justify-between">
                        <div class="w-full tablet:w-1/2 px-2">
                            <div class="flex flex-col mt-3">
                                <label class="customLabel">نام</label>
                                <input asp-for="DetailsDto.Name" type="text" class="customInput disabled:bg-gray-100" disabled>
                            </div>
                            <div class="flex flex-col mt-3">
                                <label class="customLabel">کد ملی</label>
                                <input type="text" asp-for="DetailsDto.NationalCode" class="customInput disabled:bg-gray-100" disabled>
                            </div>

                            <div class="flex flex-col mt-3">
                                <label for="user" class="customLabel">نقش</label>
                                <div>
                                    <input type="text" asp-for="DetailsDto.Role" class="customInput disabled:bg-gray-100" disabled>
                                </div>
                            </div>
                        </div>

                        <div class="w-full tablet:w-1/2 px-2">
                            <div class="flex flex-col mt-3">
                                <label class="customLabel">نام خانوادگی</label>
                                <input asp-for="DetailsDto.LastName" type="text"
                                       class="customInput">
                            </div>
                        </div>
                    </div>
                    <div class="w-full flex px-2">
                        <div class="w-1/2 py-3 pl-3">
                            <a asp-route-Id="@Model.DetailsDto.Id" asp-page="Edit" class="subBtn btnIndigo">
                                ویرایش
                            </a>
                        </div>
                        <div class="w-1/2 py-3 pr-3">
                            <a asp-page="Index" class="subBtn btnDark">
                                بازگشت
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>