@page
@model PaperGate.Web.Pages.Account.Admin.Posts.IndexModel
@{
    ViewData["Title"] = $"مدیریت {Model.CategoryTitle} ها";
}
<div class="container py-8">
    <ul class="breadcrumb">
        <li><a class="hover:text-blue-600 transition" href="~/">خانه</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin">پنل</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin/Posts">@Model.CategoryTitle</a></li>
    </ul>
    <div class="block tablet:flex justify-between">
        @await Component.InvokeAsync("SidePanelComponent")
        <div class="w-full tablet:w-9/12 px-3 mt-5">
            <div class="PanelCard border rounded p-3">
                <!--                تایتل-->
                <div class="PanelCard-header flex justify-between">
                    <a asp-page="Create" asp-route-sub="@Model.Sub" class="btnSolid bg-indigo-400 text-white mr-3">
                        <i class="fas fa-plus align-middle"></i>
                        ایجاد
                    </a>
                    <h2 class="text-lg block mx-auto">مدیریت @Model.CategoryTitle ها </h2>
                </div>
                <div class="PanelCard-body pt-5">
                    <!--    سرچ و فیلتر محصولات-->
                    <form class="block tablet:flex mb-5 mx-auto">
                        <!--                        نام محصول-->
                        <div class="w-full tablet:w-1/3 px-2 mt-0 tablet:-mt-2">
                            <input type="text" name="searchName" class="customInput" placeholder="نام @Model.CategoryTitle">
                        </div>
                        <!--    سرچ-->
                        <div class="w-full tablet:w-1/3 px-2 mt-2 tablet:mt-0">
                            <button type="submit" class="subBtn btnIndigo"> بیاب</button>
                        </div>
                        <!--    بازگشت-->
                        <div class="w-full tablet:w-1/3 px-2 mt-2 tablet:mt-0">
                            <a asp-page="Index" asp-route-sub="@Model.Sub" class="subBtn btnDark"> بازگشت </a>
                        </div>
                    </form>
                    <div class="overflow-auto">
                        @if(Model.PostDto.Any())
                        {
                            <table class="table text-center">
                                <thead class="bg-gray-200">
                                    <tr>
                                        <th class="tableBorder p-3">عکس</th>
                                        <th class="tableBorder p-3">موضوع</th>
                                        <th class="tableBorder p-3">تاریخ ایجاد</th>
                                        <th class="tableBorder p-3">مدیریت</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-gray-50">
                                    @foreach (var item in Model.PostDto)
                                    {
                                        <tr class="hover:bg-gray-100 transition">
                                            <td class="border-b border-r">
                                                <img src="~/Assets/Pictures/Papers/@item.Picture" width="100" height="100" class="rounded block mx-auto "
                                                     alt="book">
                                            </td>
                                            <!--    نام-->
                                            <td class="tableBorder"> @item.Title </td>
                                            <!--    تاریخ-->
                                            <td class="tableBorder">@item.CreatedOn.ToShamsi(FullData: true)</td>
                                            <!--    مدیریت-->
                                            <td class="tableBorder">
                                                <div class="flex items-center justify-center">
                                                    <a asp-page="Details" asp-route-Id="@item.Id"
                                                       class="btnGroup rounded-r bg-indigo-600 hover:bg-indigo-700 text-white">
                                                        <i class="fas fa-list"></i>
                                                    </a>
                                                    <a asp-page="Edit" asp-route-Id="@item.Id"
                                                        class="btnGroup bg-yellow-400 hover:bg-yellow-500">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-page="Delete" asp-route-Id="@item.Id"
                                                        class="btnGroup rounded-l bg-red-600 hover:bg-red-700 text-white">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        }
                        else
                        {
                            <h3 class="alertInfo text-center">@Model.CategoryTitle ای موجود نیست</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>