@page
@model PaperGate.Web.Pages.Account.Admin.Messages.IndexModel
@{
    ViewData["Title"] = "پیام ها";
}
<div class="container pt-8">
    <ul class="breadcrumb">
        <li><a class="hover:text-blue-600 transition" href="~/">خانه</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin/Categories">پنل</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin/Messages">پیام ها</a></li>
    </ul>
    <div class="block tablet:flex justify-between">
        @await Component.InvokeAsync("SidePanelComponent")
        <div class="w-full tablet:w-9/12 px-3 mt-5">
            <div class="PanelCard border rounded p-3">
                <!--                تایتل-->
                <div class="PanelCard-header">
                    <h2 class="text-lg">مدیریت پیام ها</h2>
                </div>
                <div class="PanelCard-body pt-5">
                    <div class="card-body p-3">
                        @if (Model.MessageInfo is not null && Model.MessageInfo.Any())
                        {
                            <table class="table text-center">
                                <thead class="bg-gray-200">
                                    <tr>
                                        <th class="tableBorder p-3">تاریخ ایجاد</th>
                                        <th class="tableBorder p-3">فرستنده</th>
                                        <th class="tableBorder p-3">ایمیل</th>
                                        <th class="tableBorder p-3">وضعیت</th>
                                        <th class="tableBorder p-3">مدیریت</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-gray-50">
                                    @foreach (var item in Model.MessageInfo)
                                    {
                                        <tr class="hover:bg-gray-100 transition">
                                            <!--    متن-->
                                            <td class="tableBorder">@item.CreatedOn.ToShamsi(true)</td>
                                            <!--فرستنده-->
                                            <td class="tableBorder">@item.SendersName</td>
                                            <!--ایمیل-->
                                            <td class="tableBorder">@item.SendersEmail</td>
                                            <!--وضعیت-->
                                            <td class="tableBorder">@(item.Read ? "خوانده شده" : "تازه")</td>
                                            <!--    مدیریت-->
                                            <td class="tableBorder">
                                                <div class="flex items-center justify-center">
                                                    <a asp-page="Details" asp-route-Id="@item.Id" class="btnGroup rounded bg-indigo-600 hover:bg-indigo-700 text-white"><i class="fas fa-list"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <h3 class="text-center alertInfo">پیامی موجود نیست</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
