@page
@model PaperGate.Web.Pages.Account.Admin.Messages.DetailsModel
@{
    ViewData["Title"] = "جزئیات پیام";
}
<div class="container pt-8">
    <ul class="breadcrumb">
        <li><a class="hover:text-blue-600 transition" href="#">خانه</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="#">پنل</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="#">محصول</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="#">ایجاد</a></li>
    </ul>
    <div class="block tablet:flex justify-between">
        @await Component.InvokeAsync("SidePanelComponent")
        <div class="w-full tablet:w-9/12 px-3 mt-5">
            <div class="PanelCard border rounded p-3">
                <!--                تایتل-->
                <div class="PanelCard-header">
                    <h2 class="text-lg">جزئیات پیام </h2>
                </div>
                <div class="PanelCard-body pt-5">
                    <form method="post">
                        <input type="hidden" asp-for="Message.Id" />
                        <div class="block tablet:flex justify-between">
                            <div class="w-full tablet:w-1/2 px-2">
                                <div class="flex flex-col mt-3">
                                    <label for="name" class="customLabel">نام فرستنده </label>
                                    <input id="name" asp-for="Message.SendersName" class="customInput disabled:bg-gray-100" disabled>
                                </div>
                                <div class="flex flex-col mt-3">
                                    <label for="Email" class="customLabel">ایمیل فرستنده</label>
                                    <input id="Email" asp-for="Message.SendersEmail" class="customInput disabled:bg-gray-100" disabled>
                                </div>
                            </div>

                            <div class="w-full tablet:w-1/2 px-2">
                                <div class="flex flex-col mt-3">
                                    <label for="CreateTime" class="customLabel">تاریخ ایجاد</label>
                                    <input type="text" id="CreateTime" value="@Model.Message.CreatedOn.ToShamsi(true)" class="customInput disabled:bg-gray-100" disabled>
                                </div>
                            </div>

                        </div>
                        <div class="w-full">
                            <!--    کامنت-->
                            <div class="flex flex-col mt-3">
                                <label for="comment" class="customLabel">متن پیام</label>
                                <textarea id="comment" placeholder="متن پیام" class="customInput disabled:bg-gray-100"
                                          disabled rows="6">
                                    @Model.Message.Content
                              </textarea>
                            </div>
                        </div>

                        <div class="w-full flex px-2">
                            <div class="w-1/2 py-3 pl-3">
                                <button type="submit" class="subBtn btnDanger">
                                    حذف
                                </button>
                            </div>
                            <div class="w-1/2 py-3 pr-3">
                                <a asp-page="./Index" class="subBtn btnDark">
                                    بازگشت
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>