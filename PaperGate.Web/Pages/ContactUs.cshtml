@page
@model PaperGate.Web.Pages.ContactUsModel
@{
    ViewData["Title"] = "ارتباط ما";
}
<div class="container my-8">
    <div class="tablet:flex shadow px-6 py-44 rounded bg-white">
        <div class="tablet:w-2/3 tablet:pl-8">
            <h1 class="my-2 text-3xl font-semibold text-gray-800"> ارتباط ما </h1>

            <div class="mt-4">
                <form method="post">
                    <div class="mt-3">
                        <label class="customLabel"> نام شما </label>
                        <input asp-for="MessageDto.SendersName" type="text" class="customInput">
                    </div>
                    <div class="mt-3">
                        <label class="customLabel"> ایمیل </label>
                        <input asp-for="MessageDto.SendersEmail" type="text" class="customInput">
                    </div>
                    <div class="mt-3">
                        <label class="customLabel"> پیام </label>
                        <textarea type="text" asp-for="MessageDto.Content" class="customInput" rows="5"></textarea>
                    </div>
                </form>
            </div>

        </div>
        @if(Model.LastestPosts is not null && Model.LastestPosts.Count > 0)
        {
            <div class="tablet:w-1/3 tablet:pr-8 tablet:mt-0 mt-8">
                <div class="shadow-sm bg-indigo-100 shadow-gray-100 border rounded">
                    <div class="title p-4 text-base border-b border-indigo-700">پست های اخیر</div>
                    <div class="py-6 px-4">
                        <ol class="flex flex-col list-disc mr-4 gap-8">
                            @foreach (var item in Model.LastestPosts)
                            {
                            <li><a href="~/Post/@item.Slug" class="text-indigo-950">@item.Title</a></li>
                            }
                        </ol>
                    </div>
                </div>
            </div>
        }
        
    </div>
</div>