@page
@model PaperGate.Web.Pages.ContactUsModel
@{
	ViewData["Title"] = Localizer["header_ContactUs"];
}
<div class="container my-8">
	<div class="tablet:flex shadow px-6 py-12 rounded bg-white">
		<div class="tablet:w-2/3 tablet:pl-8">
			<h1 class="my-2 text-3xl font-semibold text-gray-800"> @Localizer["header_ContactUs"] </h1>

			<div class="mt-4">
				<form method="post">
					<div class="mt-3">
						<label class="customLabel"> @Localizer["contactUs_YourName"] </label>
						<input asp-for="MessageDto.SendersName" type="text" class="customInput">
						<span asp-validation-for="MessageDto.SendersName" class="text-red-600"></span>
					</div>
					<div class="mt-3">
						<label class="customLabel"> @Localizer["contactUs_Email"] </label>
						<input asp-for="MessageDto.SendersEmail" type="text" class="customInput">
						<span asp-validation-for="MessageDto.SendersEmail" class="text-red-600"></span>

					</div>
					<div class="mt-3">
						<label class="customLabel"> @Localizer["contactUs_Message"] </label>
						<textarea type="text" asp-for="MessageDto.Content" class="customInput" rows="5"></textarea>
						<span asp-validation-for="MessageDto.Content" class="text-red-600"></span>

					</div>

					<button type="submit" class="bg-blue px-8 py-2 rounded-full text-base font-bold text-white mt-8"> @Localizer["contactUs_Send"] </button>
				</form>
			</div>

		</div>
		@if (Model.LastestPosts is not null && Model.LastestPosts.Count > 0)
		{
			<div class="tablet:w-1/3 tablet:pr-8 tablet:mt-0 mt-8 pt-8">
				<div class="shadow-sm bg-indigo-100 shadow-gray-100 border rounded">
					<div class="title p-4 text-base border-b border-indigo-700 ">@Localizer["contactUs_RecentPublications"]</div>
					<div class="py-6 px-4 overflow-hidden">
						<ol class="flex flex-col list-disc mr-2 gap-6 overflow-hidden">
							@foreach (var item in Model.LastestPosts)
							{
								<li>
									<a href="~/Post/@item.Slug" class="text-indigo-950">
										@(CultureInfo.CurrentUICulture.Name.StartsWith("fa")
																		? $"{item.Title}"
																		: $"{item.EnglishTitle}")
							</a>
						</li>
							}
						</ol>
					</div>
				</div>
			</div>
		}

	</div>
</div>