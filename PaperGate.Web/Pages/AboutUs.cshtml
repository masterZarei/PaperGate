@page
@model PaperGate.Web.Pages.AboutUsModel
@{
	ViewData["Title"] = @Localizer["header_AboutUs"];
}
<div class="container py-8">
	<!--    main image-->
	<div>
		<img src="~/Assets/Pictures/Preferences/@Model.PageDto?.Image" alt="main image"
			 class="w-full h-\[50vh\] sm768:h-[80vh] rounded-sm shadow shadow-gray-500">
	</div>
	<!--    information-->
	<div class="w-full pr-3 mt-10">
		<p class="text-gray-800 line-height font-bold text-justify mt-8 tablet:mt-0">
			@(CultureInfo.CurrentUICulture.Name.StartsWith("fa")
						? Model?.PageDto?.Description
						: Model?.PageDto?.EnglishDescription)
		</p>
	</div>
	<div>
		@if (Model.PageDto.ContactWays is not null && Model.PageDto.ContactWays.Count > 0)
		{
			<h1 class="text-xl text-gray-800 font-bold text-center py-3"> @Localizer["ContactWays"] </h1>
			<div class="flex gap-8 items-center mx-auto justify-center mt-4">
				@foreach (var item in Model.PageDto.ContactWays.Where(c => c.IsLink))
				{
					<div class="mt-4 gap-4 flex justify-center items-center">
						<a href="@item.Link"><i class="text-3xl text-red-500 @item.Icon"></i></a>
					</div>
				}
			</div>
			<div class="mt-4 mx-auto">
				@if (CultureInfo.CurrentUICulture.Name.StartsWith("fa"))
					{
						@foreach (var item in Model.PageDto.ContactWays.Where(c => !c.IsLink))
						{
						<h2 class="text-center text-style text-gray-800">
						<i class="@item.Icon"></i>
						: @item.Link
					</h2>
						}
					}
					else
					{
						@foreach (var item in Model.PageDto.ContactWays.Where(c => !c.IsLink))
						{
						<h2 class="text-center text-style text-gray-800">
							<i class="@item.Icon"></i>
							: @item.EnglishLink
						</h2>
						}
					}
			</div>
		}

	</div>
</div>
@section Styles {
	<style>
		body {
			background-color: #626b32;
		}
	</style>
}