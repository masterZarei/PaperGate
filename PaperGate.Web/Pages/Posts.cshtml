@page
@model PaperGate.Web.Pages.PostsModel
@{
	ViewData["Title"] = Model.SubTitle;

}
<section id="Posts" class="py-12" style="margin:80px">
	<div class="container mx-auto w-4/5">
		<h2 class="text-3xl font-bold text-center mb-8">انتشارات @Model.SubTitle</h2>
		@if (Model.PostsDto.Posts != null && Model.PostsDto.Posts.Count != 0)
		{

			<section class="container">
				<div class="grid xs500:grid-cols-1 sm768:grid-cols-2 tablet:grid-cols-3">
					@foreach (var item in Model.PostsDto.Posts)
					{

						<div style="width: 248px; margin-left: 10px;">
							<div class="box-item bg-white rounded">
								<div class="border border-gray-100 shadow transition ease-in-out duration-300 hover:shadow-xl">
									<!-- img box -->
									<div class="relative overflow-hidden">
										<a href="#">
											<img src="~/Assets/Pictures/@item.Picture" alt="Book" class="w-full h-64 sm:h-72 cursor-pointer transition-transform duration-300 group-hover:scale-110">
										</a>
									</div>
									<!-- content box -->
									<div class="px-3 py-4 mt-2">
										<h1 class="text-gray-800 font-semibold mb-1 cursor-pointer group-hover:text-purple-700 transition-colors duration-300">
											<a href="#">تایتل مقاله</a>
										</h1>
								
										<div class="pt-3 mt-3 border-t border-t-gray-400">
											<p class="text-sm font-semibold text-gray-800">14 خرداد 1404</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</section>
		}
		else
		{
			<h3 class="text-center alertInfo m-3">@Model.SubTitle ای پیدا نشد</h3>
		}
	</div>
</section>